<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_addproject"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="fab"
    tools:context="zucc.tm.jg.View.addprojectActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:theme="@style/toolBar2"
        app:titleTextColor="#ffffff">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="48dp"

                >

                <ImageView
                    android:id="@+id/name_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/project" />

                <EditText
                    android:id="@+id/name_t"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/name_img"
                    android:gravity="center_vertical"
                    android:hint="项目名称"
                    android:textColor="@color/PrimaryText"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/Divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/con"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_below="@+id/name">

                <ImageView
                    android:id="@+id/con_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:src="@drawable/abstrac" />

                <EditText
                    android:id="@+id/con_t"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/con_img"
                    android:gravity="top"
                    android:hint="项目简介"
                    android:textColor="@color/PrimaryText"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/Divider" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_below="@+id/con">

                <ImageView
                    android:id="@+id/time_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:src="@drawable/time" />

                <TextView
                    android:id="@+id/time_t"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/time_img"
                    android:background="@drawable/xx2"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:hint="未设定"
                    android:onClick="time1"
                    android:textColor="@color/PrimaryText"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/time_t2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_below="@+id/time_t"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/time_img"
                    android:background="@drawable/xx2"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:hint="未设定"
                    android:onClick="time2"
                    android:textColor="@color/PrimaryText"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/Divider" />
            </RelativeLayout>
            <TextView
                android:id="@+id/title_founder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="创始人"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/time"
                android:layout_margin="8dp"
                />
            <RelativeLayout
                android:id="@+id/founder"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_below="@+id/title_founder"
                android:gravity="center_vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardx"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:cardCornerRadius="2dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="16dp">


                        <zucc.tm.jg.CustomerView.AvatarImageView
                            android:id="@+id/tou"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/link"
                            android:adjustViewBounds="true"
                            />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tou"
                            android:layout_marginLeft="16dp"

                            >
                            <TextView
                                android:id="@+id/name_c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Leo.Hu"
                                android:textColor="@color/PrimaryText"
                                android:textSize="16dp" />
                            <TextView
                                android:id="@+id/phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18368893105"
                                android:layout_alignParentBottom="true"
                                android:textColor="@color/SecondaryText"
                                android:textSize="14dp" />
                        </RelativeLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
