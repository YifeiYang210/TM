<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_addproject"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zucc.tm.jg.View.addprojectActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/kefu_fan"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#00ffffff"
                android:onClick="fan"
                android:padding="9dp"
                android:scaleType="fitCenter"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="添加项目"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#00ffffff"
                android:padding="12dp"
                android:scaleType="fitCenter" />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/name"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >
        <ImageView
            android:id="@+id/name_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/project"/>
        <EditText
            android:id="@+id/name_t"
            android:layout_toRightOf="@+id/name_img"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/PrimaryText"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:hint="项目名称"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/Divider"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/con"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        >
        <ImageView
            android:id="@+id/con_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/abstrac"/>
        <EditText
            android:id="@+id/con_t"
            android:layout_toRightOf="@+id/con_img"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/PrimaryText"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:hint="项目简介"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/Divider"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/time"
        android:layout_below="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        >
        <ImageView
            android:id="@+id/time_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/time"/>
        <TextView
            android:id="@+id/time_t"
            android:layout_toRightOf="@+id/time_img"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@color/PrimaryText"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:hint="未设定"/>
        <TextView
            android:id="@+id/time_t2"
            android:layout_below="@+id/time_t"
            android:layout_toRightOf="@+id/time_img"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@color/PrimaryText"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:hint="未设定"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/Divider"/>
    </RelativeLayout>
    <ListView
        android:layout_below="@+id/time"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:layout_marginTop="8dp"
        ></ListView>
</RelativeLayout>
