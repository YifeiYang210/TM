<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_addproject"
    android:layout_width="match_parent"
    android:transitionName="fab"
    android:layout_height="match_parent"
    tools:context="zucc.tm.jg.View.addprojectActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"

        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        app:titleTextColor="#ffffff"
        app:theme="@style/toolBar2">

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        >
        <ImageView
            android:id="@+id/name_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/project"/>
        <EditText
            android:id="@+id/name_t"
            android:layout_toRightOf="@+id/name_img"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/PrimaryText"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:hint="项目名称"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/Divider"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/con"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        >
        <ImageView
            android:id="@+id/con_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/abstrac"/>
        <EditText
            android:id="@+id/con_t"
            android:layout_toRightOf="@+id/con_img"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/PrimaryText"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:hint="项目简介"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/Divider"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/time"
        android:layout_below="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        >
        <ImageView
            android:id="@+id/time_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/time"/>
        <TextView
            android:id="@+id/time_t"
            android:layout_toRightOf="@+id/time_img"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@color/PrimaryText"
            android:clickable="true"
            android:background="@drawable/xx2"
            android:onClick="time1"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:hint="未设定"/>
        <TextView
            android:id="@+id/time_t2"
            android:clickable="true"
            android:background="@drawable/xx2"
            android:layout_below="@+id/time_t"
            android:onClick="time2"
            android:layout_toRightOf="@+id/time_img"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@color/PrimaryText"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:hint="未设定"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/Divider"/>
    </RelativeLayout>
    <zucc.tm.jg.Util.NoScrollListview
        android:layout_below="@+id/time"
        android:id="@+id/list"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:layout_marginTop="8dp"
        ></zucc.tm.jg.Util.NoScrollListview>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
