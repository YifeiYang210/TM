<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_addproject"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="fab"
    tools:context="zucc.tm.jg.View.addrwActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        app:theme="@style/toolBar2"
       >

    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/con"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        >
        <ImageView
            android:id="@+id/con_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/abstrac"/>
        <EditText
            android:id="@+id/con_t"
            android:layout_toRightOf="@+id/con_img"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/PrimaryText"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:hint="任务简介"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/Divider"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/time"
        android:layout_below="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        >
        <ImageView
            android:id="@+id/time_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/time"/>
        <TextView
            android:id="@+id/time_t"
            android:layout_toRightOf="@+id/time_img"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@color/PrimaryText"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:hint="未设定"/>
        <TextView
            android:id="@+id/time_t2"
            android:layout_below="@+id/time_t"
            android:layout_toRightOf="@+id/time_img"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@color/PrimaryText"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:hint="未设定"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/Divider"/>
    </RelativeLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="2dp"
            android:layout_below="@id/time">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:id="@+id/tx_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:textSize="16dp"
                        android:textColor="@color/PrimaryText"
                        android:gravity="center"
                        android:text="提醒时间"/>
                    <TextView
                        android:layout_toRightOf="@+id/tx_time"
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="2017.05.20 08:00"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/Divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"                    android:textSize="16dp"
                        android:textColor="@color/PrimaryText"
                        android:gravity="center"
                        android:text="提醒方式"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"                    android:textSize="16dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center"
                        android:text="闹铃"/>

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/title_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成员"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/tx"
            android:layout_margin="8dp"
            />
        <zucc.tm.jg.Util.NoScrollListview
        android:layout_below="@+id/title_member"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:layout_marginTop="8dp"
        ></zucc.tm.jg.Util.NoScrollListview>

    <RelativeLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/name_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/project"/>
        <EditText
            android:id="@+id/name_t"
            android:layout_toRightOf="@+id/name_img"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/PrimaryText"
            android:textSize="16dp"
            android:layout_marginLeft="16dp"
            android:hint="任务名称"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/Divider"/>
    </RelativeLayout>
    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
