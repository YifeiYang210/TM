<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="zucc.tm.jg.View.projectInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                >
                <ImageView
                    android:id="@+id/time_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"

                    android:src="@drawable/time"/>
                <TextView
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:id="@+id/time_t"
                    android:layout_toRightOf="@+id/time_img"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textColor="@color/PrimaryText"
                    android:textSize="16dp"
                    android:layout_marginLeft="16dp"
                    android:text="2017年5月10日 周三"
                    android:hint="未设定"/>
                <TextView
                    android:id="@+id/time_t2"
                    android:layout_below="@+id/time_t"
                    android:layout_toRightOf="@+id/time_img"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textColor="@color/PrimaryText"
                    android:textSize="16dp"
                    android:layout_marginLeft="16dp"
                    android:text="2017年5月25日 周日"
                    android:hint="未设定"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/Divider"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/con"
                android:layout_below="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                >
                <ImageView
                    android:id="@+id/con_img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:src="@drawable/abstrac"/>
                <TextView
                    android:id="@+id/con_t"
                    android:layout_toRightOf="@+id/con_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/PrimaryText"
                    android:textSize="16dp"
                    android:lines="3"
                    android:text="@string/test_project_info"
                    android:layout_marginTop="12dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/Divider"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/title_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公告"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/con"
                android:layout_margin="8dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_notice"
                android:id="@+id/notice"
                >
                <android.support.v7.widget.CardView
                    android:id="@+id/tv_gonggao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:textSize="14dp"
                        android:textColor="@color/SecondaryText"
                        android:text="@string/test_notice"
                        />
                </android.support.v7.widget.CardView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notice"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        >
                        <TextView
                            android:id="@+id/title_complete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:textColor="@color/PrimaryText"
                            android:text="完成度"
                            />
                        <TextView
                            android:id="@+id/tv_complete"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:textColor="@color/colorPrimary"
                            android:text="1/4"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <TextView
                android:id="@+id/title_founder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创始人"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/complete"
                android:layout_margin="8dp"
                />
            <RelativeLayout
                android:id="@+id/founder"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_below="@+id/title_founder"
                android:gravity="center_vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardx"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:cardCornerRadius="2dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="16dp">


                        <zucc.tm.jg.CustomerView.AvatarImageView
                            android:id="@+id/tou"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/link"
                            android:adjustViewBounds="true"
                            />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tou"
                            android:layout_marginLeft="16dp"

                            >
                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Leo.Hu"
                                android:textColor="@color/PrimaryText"
                                android:textSize="16dp" />
                            <TextView
                                android:id="@+id/phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18368893105"
                                android:layout_alignParentBottom="true"
                                android:textColor="@color/SecondaryText"
                                android:textSize="14dp" />
                        </RelativeLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
            <TextView
                android:id="@+id/title_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成员"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@+id/founder"
                android:layout_margin="8dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_member"
                >
                <zucc.tm.jg.Util.NoScrollListview
                    android:id="@+id/member_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </zucc.tm.jg.Util.NoScrollListview>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>


</FrameLayout>
