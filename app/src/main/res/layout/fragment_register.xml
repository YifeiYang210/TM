<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zucc.tm.jg.View.RegisterFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:elevation="4dp"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="72dp" />
            <RelativeLayout
                android:id="@+id/cardview_register"
                android:layout_marginTop="8dp"
                android:elevation="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/bg_register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:src="@drawable/bg_register"
                            android:adjustViewBounds="true"
                            />
                        <EditText
                            android:layout_below="@+id/bg_register"
                            android:id="@+id/et_call"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="16dp"
                            android:textSize="16dp"
                            android:phoneNumber="true"
                            android:maxLength="20"
                            android:hint="手机号"
                            />
                        <EditText
                            android:layout_below="@+id/et_call"
                            android:id="@+id/et_passwd"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="16dp"
                            android:textSize="16dp"
                            android:password="true"
                            android:maxLength="20"
                            android:hint="密码"
                            />
                        <EditText
                            android:layout_below="@+id/et_passwd"
                            android:id="@+id/et_repasswd"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="16dp"
                            android:textSize="16dp"
                            android:password="true"
                            android:maxLength="20"
                            android:hint="重复密码"
                            />
                        <!--<Button-->
                            <!--android:layout_below="@+id/et_repasswd"-->
                            <!--android:id="@+id/btn_login"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="36dp"-->
                            <!--android:layout_marginLeft="16dp"-->
                            <!--android:layout_marginRight="16dp"-->
                            <!--android:layout_marginBottom="16dp"-->
                            <!--android:paddingLeft="16dp"-->
                            <!--android:paddingRight="16dp"-->
                            <!--android:text="已有账号"-->
                            <!--android:textSize="14dp"-->
                            <!--android:textColor="@color/SecondaryText"-->
                            <!--android:background="#00000000"-->
                            <!--/>-->
                        <Button
                            android:layout_below="@+id/et_repasswd"
                            android:id="@+id/btn_register"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="16dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:text="注册"
                            android:textSize="16dp"
                            android:textColor="@color/colorAccent"
                            android:background="#00000000"
                            />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
            <!--<Button-->
                <!--android:layout_below="@+id/cardview_register"-->
                <!--android:id="@+id/btn_register"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="36dp"-->
                <!--android:layout_margin="8dp"-->
                <!--android:paddingLeft="16dp"-->
                <!--android:paddingRight="16dp"-->
                <!--android:text="REGISTER"-->
                <!--android:letterSpacing="0.3"-->
                <!--android:textSize="14dp"-->
                <!--android:textColor="#ffffff"-->
                <!--android:background="@color/colorAccent"-->
                <!--/>-->
        </RelativeLayout>

    </ScrollView>

</FrameLayout>
